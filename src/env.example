# ============================================
# Настройки базы данных PostgreSQL
# ============================================
# Адрес хоста базы данных (для Docker используйте имя сервиса: db)
PG_HOST=db

# Пользователь базы данных
PG_USER=postgres

# Пароль пользователя базы данных
PG_PASSWORD=0000

# Название базы данных
PG_DB=feed-fish

# Порт базы данных
PG_PORT=5432

# ============================================
# Настройки Backend сервера
# ============================================
# Порт, на котором будет работать backend сервер
BACK_PORT=8000

# Адрес хоста backend сервера (для Docker используйте имя сервиса: backend)
BACK_HOST=backend

# Разрешенные хосты для Django (через запятую)
# По умолчанию: 158.160.94.8,localhost
ALLOWED_HOSTS=158.160.94.8,localhost

# ============================================
# Настройки Nginx
# ============================================
# Порт, на котором будет работать Nginx (обычно 80)
NGINX_PORT=80

# ============================================
# Настройки MQTT брокера
# ============================================
# Адрес MQTT брокера
# Для локального брокера в Docker используйте: mqtt
# Для внешнего брокера используйте IP адрес: 158.160.94.8
MQTT_SERVER=158.160.94.8

# Порт MQTT брокера
MQTT_PORT=1883

# Пользователь MQTT брокера
MQTT_USER=user

# Пароль MQTT брокера
MQTT_PASSWORD=iiot-mqtt-fish

# Топик для запросов кормления (по умолчанию: bunker)
MQTT_REQUESTS_TOPIC=bunker

# Топик для команд тележки (по умолчанию: cart)
MQTT_CART_TOPIC=cart

# Топик для логов (по умолчанию: logs)
MQTT_LOGS_TOPIC=logs
